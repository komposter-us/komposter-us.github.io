{
    "name": "komposter-io",
    "version": "1.4.2",
    "description": "",
    "main": "dist/index.js",
    "scripts": {
        "build": "gulp build",
        "watch": "gulp watch",
        "watch-dev": "gulp watch-dev",
        "test": "jest --detectOpenHandles",
        "lint": "eslint --ext .js,.jsx,.ts,.tsx src --ignore-pattern src/**/*.spec.ts",
        "deploy": "git subtree push --prefix dist origin gh-pages"
    },
    "gulp": {
        "sass": 0,
        "js": 1,
        "uncss": {
            "enable": false,
            "ignore": []
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/raziEiL/komposter.io.git"
    },
    "author": {
        "name": "Denis Medvedev (raziEiL)",
        "email": "mr.raz4291@gmail.com"
    },
    "jest": {
        "roots": [
            "<rootDir>"
        ],
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.js?$",
        "moduleFileExtensions": [
            "js",
            "jsx",
            "json",
            "node"
        ],
        "testEnvironment": "jsdom"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            "node_modules"
        ],
        "watch": [
            "src/backend"
        ],
        "exec": "tsc && npm run start",
        "ext": "ts"
    },
    "license": "GPL-3.0",
    "devDependencies": {
        "@types/express": "^4.17.9",
        "@types/node": "^14.14.28",
        "@types/tmi.js": "^1.4.2",
        "@typescript-eslint/eslint-plugin": "^4.9.1",
        "@typescript-eslint/eslint-plugin-tslint": "^4.9.1",
        "@typescript-eslint/parser": "^4.9.1",
        "autoprefixer": "^9.8.6",
        "browser-sync": "^2.26.7",
        "browserify": "^17.0.0",
        "del": "^6.0.0",
        "eslint": "^7.15.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^24.1.3",
        "eslint-plugin-typescript": "^0.14.0",
        "eslint-plugin-unicorn": "^23.0.0",
        "file-saver": "^2.0.5",
        "gulp": "^4.0.2",
        "gulp-clean-css": "^4.2.0",
        "gulp-concat": "^2.6.1",
        "gulp-htmlmin": "^5.0.1",
        "gulp-imagemin": "^7.1.0",
        "gulp-postcss": "^9.0.0",
        "gulp-rename": "^2.0.0",
        "gulp-sass": "^4.1.0",
        "gulp-sourcemaps": "^2.6.5",
        "gulp-uglify-es": "^2.0.0",
        "gulp-uncss": "^1.0.6",
        "jest": "^26.6.3",
        "merge-stream": "^2.0.0",
        "node-sass": "^4.14.1",
        "postcss-calc": "^7.0.1",
        "postcss-css-variables": "^0.17.0",
        "ts-jest": "^26.4.4",
        "tslint": "^6.1.3",
        "typescript": "^4.1.3",
        "vinyl-buffer": "^1.0.1",
        "vinyl-source-stream": "^2.0.0"
    },
    "dependencies": {
        "@raz1el/util": "^1.0.6"
    }
}